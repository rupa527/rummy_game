<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:background="#E5E5E5" >

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="384dp"
        android:layout_height="118dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/card1_layout"
            android:layout_width="384dp"
            android:layout_height="117dp">


            <TextView
                android:id="@+id/text_grand_cont"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/green_rectangle"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:text="Grand Contest"
                android:textColor="#02A253"
                android:textSize="14sp"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_rapid_winning"
                android:layout_width="98dp"
                android:layout_height="20dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/orange_rectangle"
                android:gravity="center"
                android:text="Rapid Winning"
                android:textColor="#FDD548"
                android:textSize="14sp"
                android:textStyle="normal"
                app:layout_constraintStart_toEndOf="@+id/text_grand_cont"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_entry_fee"
                android:layout_width="60dp"
                android:layout_height="15dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="9dp"
                android:text="Entry Fee"
                android:textColor="#000000"
                android:textSize="12sp"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_grand_cont" />

            <TextView
                android:id="@+id/text_entry_fee_amount"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/roboto_bold"
                android:text="₹150"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_entry_fee" />

            <TextView
                android:id="@+id/text_deal"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_marginStart="62dp"
                android:layout_marginTop="28dp"
                android:background="@drawable/gray_rectangle"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:text="1 Deal"
                android:textColor="#230045"
                app:layout_constraintStart_toEndOf="@+id/text_entry_fee_amount"
                app:layout_constraintTop_toBottomOf="@+id/text_rapid_winning"
               />

            <TextView
                android:id="@+id/text_2p"
                android:layout_width="35dp"
                android:layout_height="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="28dp"
                android:background="@drawable/gray_rectangle"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:text="2P"
                android:textColor="#230045"
                android:textStyle="normal"
                app:layout_constraintStart_toEndOf="@+id/text_deal"
                app:layout_constraintTop_toBottomOf="@+id/text_rapid_winning" />


            <TextView
                android:id="@+id/text_play"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/green"
                android:gravity="center"
                android:text="Play"
                android:textColor="#FFFFFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="14dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_play" />

            <TextView
                android:id="@+id/text_1st_prize"
                android:layout_width="60dp"
                android:layout_height="18dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:text="1st Prize"
                android:textColor="#000000"
                android:textSize="12sp"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider" />

            <TextView
                android:id="@+id/text_prize_amount"
                android:layout_width="40dp"
                android:layout_height="18dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:text="₹250"
                android:textColor="#000000"
                android:textSize="12sp"
                android:textStyle="normal"
                app:layout_constraintStart_toEndOf="@+id/text_1st_prize"
                app:layout_constraintTop_toBottomOf="@+id/divider" />

            <TextView
                android:id="@+id/text_players"
                android:layout_width="70dp"
                android:layout_height="18dp"
                android:layout_marginStart="29dp"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:text="89 Players"
                android:textColor="#000000"
                android:textSize="12sp"
                android:textStyle="normal"
                app:layout_constraintStart_toEndOf="@+id/text_prize_amount"
                app:layout_constraintTop_toBottomOf="@+id/divider" />

            <ImageView
                android:id="@+id/image_giftbox"
                android:layout_width="18dp"
                android:layout_height="17dp"
                android:layout_marginStart="27dp"
                android:layout_marginTop="3dp"
                app:layout_constraintStart_toEndOf="@+id/text_players"
                app:layout_constraintTop_toBottomOf="@+id/divider"
                app:srcCompat="@drawable/gift_box" />

            <TextView
                android:id="@+id/text_bonus_percentage_card"
                android:layout_width="90dp"
                android:layout_height="17dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:text="Use 10% Bonus"
                android:textColor="#02A253"
                android:textSize="12sp"
                android:textStyle="normal"
                app:layout_constraintStart_toEndOf="@+id/image_giftbox"
                app:layout_constraintTop_toBottomOf="@+id/divider" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>


